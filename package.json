{
  "name": "@mapbox/react-colorpickr",
  "version": "9.0.5",
  "description": "A React colorpicker",
  "main": "dist/colorpickr.js",
  "scripts": {
    "format": "prettier --single-quote --print-width=100 --write 'src/**/*.js'",
    "test": "eslint src && jest",
    "jest-watch": "jest --watch",
    "tsc": "tsc",
    "start": "budo example/index.tsx --dir example --serve=bundle.js --live -d -- -t [ babelify --extensions '.ts','.tsx','.js' ]",
    "prepublishOnly": "rm -rf dist && babel src -d dist && cp example/colorpickr.css dist/colorpickr.css",
    "build": "tsc && browserify -t babelify example/index.js | uglifyjs -c -m > example/bundle.js",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/react-colorpickr.git"
  },
  "keywords": [
    "react",
    "ui",
    "color"
  ],
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true
  },
  "author": "mapbox",
  "license": "ISC",
  "dependencies": {
    "clamp": "^1.0.1",
    "color": "^4.2.3",
    "color-string": "^1.9.1",
    "react-themeable": "^1.1.0"
  },
  "peerDependencies": {
    "prop-types": ">=15.7.2",
    "react": ">=16.8.0",
    "react-dom": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.4.3",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "budo": "^11.8.4",
    "eslint": "^8.33.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest-cli": "^29.4.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "prop-types": "^15.8.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.7.4",
    "uglify-js": "^3.17.4"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint src",
      "prettier --write",
      "git add"
    ]
  }
}
