{
  "name": "@mapbox/react-colorpickr",
  "version": "6.0.0",
  "description": "A React colorpicker",
  "main": "dist/colorpickr.js",
  "scripts": {
    "format": "prettier --single-quote --print-width=100 --write 'src/**/*.js'",
    "test-jest": "TESTING=1 jest -u",
    "test": "TESTING=1 jest --runInBand",
    "lint": "eslint --no-eslintrc -c .eslintrc src",
    "start": "budo example/index.js --serve=example/bundle.js --live -d -- -t babelify",
    "prepublishOnly": "rm -rf dist && babel src -d dist && cp src/colorpickr.css dist/colorpickr.css",
    "build": "browserify -t babelify example/index.js | uglifyjs -c -m > example/bundle.js"
  },
  "files": [
    "dist"
  ],
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/react-colorpickr.git"
  },
  "keywords": [
    "react",
    "ui",
    "color"
  ],
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "resetMocks": true,
    "setupFiles": [
      "<rootDir>/test/test-util/jest-setup.js"
    ],
    "roots": [
      "./test/jest"
    ],
    "testRegex": ".*\\.jest\\.js$"
  },
  "author": "mapbox",
  "license": "ISC",
  "dependencies": {
    "clamp": "^1.0.1",
    "colr-convert": "^1.0.5",
    "react-themeable": "^1.1.0",
    "tinycolor2": "^1.4.1"
  },
  "peerDependencies": {
    "prop-types": ">=15.5.0",
    "react": "^15.5.0 || ^16.0.0",
    "react-dom": "^15.5.0 || ^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "budo": "^10.0.4",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "enzyme-to-json": "^3.1.1",
    "eslint": "^4.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "jest-cli": "^21.2.1",
    "prettier": "^1.7.4",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "uglify-js": "^3.1.3"
  }
}
