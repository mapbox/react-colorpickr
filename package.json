{
  "name": "@mapbox/react-colorpickr",
  "version": "8.2.0",
  "description": "A React colorpicker",
  "main": "dist/colorpickr.js",
  "scripts": {
    "format": "prettier --single-quote --print-width=100 --write 'src/**/*.js'",
    "test": "eslint src && jest --coverage src",
    "jest-watch": "jest --watch",
    "start": "budo example/index.js --dir example --serve=bundle.js --live -d -- -t [ babelify --global ]",
    "prepublishOnly": "rm -rf dist && babel src -d dist && cp example/colorpickr.css dist/colorpickr.css",
    "build": "browserify -t babelify example/index.js | uglifyjs -c -m > example/bundle.js",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/react-colorpickr.git"
  },
  "keywords": [
    "react",
    "ui",
    "color"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "author": "mapbox",
  "license": "ISC",
  "dependencies": {
    "clamp": "^1.0.1",
    "color": "^3.1.3",
    "color-string": "^1.5.5",
    "react-themeable": "^1.1.0"
  },
  "peerDependencies": {
    "prop-types": ">=15.7.2",
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.3",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "budo": "^11.6.4",
    "eslint": "^7.24.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "jest-cli": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-test-renderer": "^17.0.2",
    "uglify-js": "^3.13.4"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  }
}
