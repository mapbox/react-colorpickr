{
  "name": "@mapbox/react-colorpickr",
  "version": "4.3.0",
  "description": "A React colorpicker",
  "main": "dist/colorpickr.js",
  "scripts": {
    "format": "prettier --single-quote --print-width=100 --write 'src/**/*.js'",
    "test": "npm run lint && mocha --recursive --compilers js:babel-register test",
    "lint": "eslint --no-eslintrc -c .eslintrc src",
    "start": "budo example/index.js --serve=example/bundle.js --live -d -- -t babelify",
    "build": "babel src -d dist",
    "build-example": "NODE_ENV=production browserify -t babelify example/index.js | uglifyjs -c -m > example/bundle.js"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-object-assign" 
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/react-colorpickr.git"
  },
  "keywords": [
    "react",
    "ui",
    "color"
  ],
  "author": "mapbox",
  "license": "ISC",
  "dependencies": {
    "clamp": "^1.0.1",
    "colr-convert": "^1.0.4",
    "react-themeable": "^1.1.0",
    "tinycolor2": "^1.3.0"
  },
  "peerDependencies": {
    "prop-types": ">=15.5.0",
    "react": ">=15.5.0",
    "react-dom": ">=15.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^14.4.0",
    "budo": "^10.0.3",
    "enzyme": "^2.4.1",
    "eslint": "^4.0.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "expect": "^1.13.4",
    "jsdom": "^11.0.0",
    "mocha": "^3.4.2",
    "prettier": "^1.4.4",
    "react": "^15.0.0",
    "react-addons-test-utils": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-hot-loader": "^1.2.9",
    "sinon": "^2.3.4",
    "tap-status": "^1.0.1",
    "uglify-js": "^3.0.17"
  }
}
