{
  "name": "@mapbox/react-colorpickr",
  "version": "10.0.4",
  "description": "A React colorpicker",
  "main": "dist/colorpickr.js",
  "scripts": {
    "format": "prettier --single-quote --print-width=100 --write 'src/**/*.js'",
    "test": "eslint src && tsc && jest",
    "jest-watch": "jest --watch",
    "tsc": "tsc",
    "start": "budo example/index.js --dir example --serve=bundle.js --live -d -- -p [ tsify --noImplicitAny ] -t [ babelify --extensions '.ts','.tsx','.js' ]",
    "prepublishOnly": "rm -rf dist && babel src -d dist --extensions '.ts,.tsx,.js' && cp example/colorpickr.css dist/colorpickr.css",
    "build": "browserify example/index.js -p [ tsify --noImplicitAny ] -t [ babelify --extensions '.ts','.tsx','.js' ] | uglifyjs -c -m > example/bundle.js",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/react-colorpickr.git"
  },
  "keywords": [
    "react",
    "ui",
    "color"
  ],
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true
  },
  "author": "mapbox",
  "license": "ISC",
  "dependencies": {
    "@mapbox/mr-ui": "^2.4.0",
    "@radix-ui/react-slider": "^1.1.0",
    "clamp": "^1.0.1",
    "color": "^4.2.3",
    "color-string": "^1.9.1",
    "react-themeable": "^1.1.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/clamp": "^1.0.1",
    "@types/color": "^3.0.3",
    "@types/color-string": "^1.5.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.43",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "budo": "^11.8.4",
    "eslint": "^8.33.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest-cli": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "tsify": "^5.0.4",
    "typescript": "^4.9.5",
    "uglify-js": "^3.17.4"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint src",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./jest-setup.js"
    ]
  }
}
